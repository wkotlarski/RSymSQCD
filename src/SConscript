import os
import ConfigParser

Config = ConfigParser.ConfigParser()
Config.read("../configure.ini")
env = Environment(ENV = os.environ)

# find out if we should use intel or gcc and setup appropriate flags
compiler = Config.get('compiler', 'compiler')
cxx_flags = ' -std=c++1z '
if compiler == 'icpc':
   print 'rsymsqcd: setting up flags for the intel c++ compiler'
   # cxx_flags += '-xHost -fp-model extended -fp-model fast=1 '
elif compiler == 'g++':
   print 'rsymsqcd: Setting up flags for the g++ compiler'
   # cxx_flags = '-march=native ' 
else:
   'Unsuported compiler. Currently we support only intel and gcc.'
   exit(1)
   
mymode = ARGUMENTS.get('mode', 'debug')
if mymode == 'release':
   print "rsymsqcd: compiling in RELEASE model"
   cxx_flags += '-DNDEBUG -O2 '
else:
   print "rsymsqcd: compiling in DEBUG mode"
   cxx_flags += '-O0 '

env.Replace( CXX = compiler ) 

env.Prepend(
   CPPPATH = [  
      os.popen('lhapdf-config --incdir').read().strip(), 
      Config.get('Cuba', 'inc'), 
      Config.get('RK', 'inc'),
      Config.get('LoopTools', 'inc'),
      '../include',
      '/usr/include',
      '/usr/include/eigen3',
      '/home/wojciech/HEP-software/gcc/ColorFull-1.1/include'
   ], CXXFLAGS = cxx_flags
)

if 'icpc' in Config.get('compiler', 'compiler'):
   fortran_libs = [ 'ifcore', 'ifport' ]
elif 'g++' in Config.get('compiler', 'compiler'):
   fortran_libs = [ 'gfortran' ]   
elif 'clang++' in Config.get('compiler', 'compiler'):
   fortran_libs = [ 'gfortran' ]   
else:
   print "Couldn't recognize the compiler. Note that only GNU g++ and intel's icpc are officially supported."
   exit()


env.Program(   
   '../bin/RSymSQCD', 
   [ Glob( '*.cpp' ) ], 
   # add 'ifcore', 'ifport' if using intel compiler suite
   # or gfortran if using gcc suite 
   LIBS = fortran_libs + [ 'LHAPDF', 'cuba', 'rk', File(Config.get('LoopTools', 'lib')), 'boost_program_options', 'ColorFull', 'cs_dipole_subtraction' ],
   LIBPATH = [ 
      os.popen('lhapdf-config --libdir').read().strip(), 
      Config.get('Cuba', 'lib'), 
      Config.get('RK', 'lib'),
      Config.get('compiler', 'libs'),
#      '/home/wojciech/HEP-software/gcc/ColorFull-1.1/lib/ColorFull',
      '/usr/lib64/ColorFull',
      '/home/wojciech/Dokumenty/IdeaProjects/cs_dipole_subtraction/target/debug',
      '/usr/lib64'
   ] 
)
